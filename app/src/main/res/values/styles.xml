<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.InvisibleTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.SubTitle">
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="AppTheme.SubTitle.Value">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/value_text_size</item>
    </style>

    <style name="ListText">
        <item name="android:ellipsize">end</item>
        <item name="autoSizeStepGranularity">@dimen/list_text_step_granularity</item>
    </style>

    <style name="ListPrimaryText" parent="ListText">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/list_primary_text_size</item>
        <item name="autoSizeMaxTextSize">@dimen/list_primary_text_size</item>
        <item name="autoSizeMinTextSize">@dimen/list_primary_min_text_size</item>
    </style>

    <style name="ListSecondaryText" parent="ListText">
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">@dimen/list_secondary_text_size</item>
        <item name="autoSizeMaxTextSize">@dimen/list_secondary_text_size</item>
        <item name="autoSizeMinTextSize">@dimen/list_secondary_min_text_size</item>
    </style>


</resources>
